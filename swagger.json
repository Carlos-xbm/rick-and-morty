{
  "openapi": "3.0.0",
  "info": {
    "title": "Api_rick-and-morty",
    "description": "API para CRUD de characters e usuários",
    "termsOfService": "",
    "contact": {
      "email": "carloseduardoedu.carlos@hotmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "API de teste"
    },
    {
      "url": "https://rick-and-morty-xbm.herokuapp.com",
      "description": "API de produção"
    }
  ],
  "paths": {
    "/users/create": {
      "post": {
        "summary": "Criar um novo usuário",
        "description": "Rota responsável por criar um novo usuário",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "Users": {
                  "value": {
                    "name": "Carlos Eduardo",
                    "userName": "Carlos-xbm",
                    "email": "carlos-xbm@exemple.com",
                    "password": "12345",
                    "avatar": "https://www.avatar.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Not Found"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/": {
      "get": {
        "summary": "Buscar todos os usuários",
        "description": "Rota responsável por buscar todos os usuários",
        "tags": ["Users"],
        "responses": {
          "400": {
            "description": "Not Found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Entrar no Rick and Morty",
        "description": "Rota responsável fazer o login de um user cadastrado",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/auth"
              },
              "examples": {
                "User": {
                  "value": {
                    "email": "carlos-xbm@exemple.com",
                    "password": "12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Not Found"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/characters": {
      "get": {
        "summary": "Lista de todos os characters",
        "description": "Rota responsável por listar todos os characters",
        "tags": ["Characters"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/characters"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/characters/find/{id}": {
      "get": {
        "summary": "Busca um character pelo ID",
        "description": "Rota responsável por buscar um character pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do character para a busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/characters"
                }
              }
            }
          }
        }
      }
    },
    "/characters/create": {
      "post": {
        "summary": "Criar um character",
        "description": "Rota responsável por criar um character",
        "tags": ["Characters"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/characters"
              },
              "examples": {
                "Characters": {
                  "value": {
                    "nome": "Glar",
                    "urlDaImagem": "http://www.glar.com.br"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/characters"
                }
              }
            }
          }
        }
      }
    },
    "/characters/update/{id}": {
      "put": {
        "summary": "Editar um character pelo ID",
        "description": "Rota responsável por editar um character pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do character para a busca",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/characters"
              },
              "examples": {
                "Character": {
                  "value": {
                    "nome": "Glar",
                    "urlDaImagem": "http://www.glar.com.br"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/characters"
                }
              }
            }
          }
        }
      }
    },
    "/characters/delete/{id}": {
      "delete": {
        "summary": "Apagar um character pelo ID",
        "description": "Rota responsável por apagar um character pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do character para deleção",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/characters/search": {
      "get": {
        "summary": "Busca um character pelo nome",
        "description": "Rota responsável por buscar um character pelo Nome",
        "tags": ["Characters"],
        "parameters": [
          {
            "in": "query",
            "name": "nome",
            "type": "string",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/characters"
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Not Found"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "String"
          },
          "userName": {
            "type": "String"
          },
          "email": {
            "type": "String"
          },
          "password": {
            "type": "String"
          },
          "avatar": {
            "type": "String"
          }
        }
      },
      "auth": {
        "type": "object",
        "properties": {
          "email": {
            "type": "String"
          },
          "password": {
            "type": "String"
          }
        }
      },
      "characters": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "String"
          },
          "urlDaImagem": {
            "type": "String"
          }
        }
      }
    }
  }
}
